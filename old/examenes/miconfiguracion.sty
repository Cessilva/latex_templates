		% 		Some useful examples
		%			* \pregunta{what's my name?}{null}
		%			* \pregunta{In the picture, who am I?}{img/pic1}		
		\newcommand{\pregunta}[2]{
			\justify\textbf{\thenum. #1}
			\ifthenelse{ \equal{#2}{null} }{ %if(args[2] == null)
				% Here is empty
			} %else
			{
				\begin{center}
					\includegraphics[width=5cm]{#2}
				\end{center}
			}
			\stepcounter{num}
		}
		
