		  		\end{hangingpar}
		  		\par\vspace*{2mm}
		  		\stepcounter{op} 
		  		\checknextarg
		  	}
		}
		\newcommand{\checknextarg}[1][texto]{
			\@ifnextchar\bgroup{
				\gobblenextarg[#1]
			}{ %else
				\setcounter{op}{1} 
			}
		}
		
		\newcommand{\gobblenextarg}[2][texto]{
			\ifthenelse{ \equal{#1}{imagen} }{
				\textbf{\Alph{op}.}\\
				\includegraphics[width=4cm]{#2}\\
				\stepcounter{op}
				\@ifnextchar\bgroup{
					\gobblenextarg[imagen]
				}{
					\setcounter{op}{1} 
					}
			}{
				\begin{hangingpar}
					{1em}\textbf{\Alph{op}.}\,#2
				\end{hangingpar}
				\par\vspace*{2mm}
				\stepcounter{op} 
				\@ifnextchar\bgroup{
					\gobblenextarg
				}{
					\setcounter{op}{1} 
				}
			}
		}
